<h1>Список блюд</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Описание</th>
      <th>Цена</th>
      <th>Локация</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.title %></td>
        <td><%= food.description %></td>
        <td><%= food.price %></td>
        <td><%= food.location %></td>
        <td><%= link_to 'Просмотреть', food %></td>
        <td><%= link_to 'Редактировать', edit_food_path(food) %></td>
        <td><%= link_to 'Удалить', food, 'data-turbo-method': :delete, data: { confirm: 'Вы уверены?' } %></td>
         <%= form_with(url: cart_add_path) do |f| %>
      <td><%= f.hidden_field :id, value: food.id %>
      <%= f.number_field :quantity, value: 0, min: 1 %>
      <%= f.submit "Добавить в корзину" %></td>
    <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Добавить блюдо', new_food_path %></p>